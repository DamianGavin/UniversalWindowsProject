<Page
	x:Class="UniversalWindowsProject.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:UniversalWindowsProject"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel>
			<TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Text="sXamlon" FontSize="50" />
			<Button Content="Start Game" x:Name="StartButton" Click="StartButton_OnClick" />
			<Button Content="Stats" x:Name="StatsButton" Click="StatsButton_OnClick"></Button>


			<Grid Background="Gray">
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>


				<!-- Draws an oval with a blue interior. -->
				<Ellipse x:Name="Red"
				         Tag="R"
				         Tapped="Red_click"
				         Width="200"
				         Height="200"
				         Grid.Column="1"
				         Grid.Row="0">

					<Ellipse.Fill>

						<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">

							<GradientStop Color="Red" Offset="0.25" />

							<GradientStop Color="Black" Offset="1.0" />
						</LinearGradientBrush>
					</Ellipse.Fill>

				</Ellipse>

				<Ellipse x:Name="Green"
				         Tag="G"
				         Tapped="Green_click"
				         Width="200"
				         Height="200"
				         Grid.Row="0"
				         Grid.Column="2">

					<Ellipse.Fill>

						<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">

							<GradientStop Color="Green" Offset="0.25" />

							<GradientStop Color="Black" Offset="1.0" />
						</LinearGradientBrush>
					</Ellipse.Fill>

				</Ellipse>

				<Ellipse x:Name="Yellow"
				         Tag="Y"
				         Tapped="Yellow_click"
				         Width="200"
				         Height="200"
				         Grid.Row="1"
				         Grid.Column="1">

					<Ellipse.Fill>

						<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">

							<GradientStop Color="Yellow" Offset="0.25" />

							<GradientStop Color="Black" Offset="1.0" />
						</LinearGradientBrush>
					</Ellipse.Fill>

				</Ellipse>

				<Ellipse x:Name="Blue"
				         Tag="B"
				         Width="200"
				         Tapped="Blue_click"
				         Height="200"
				         Grid.Column="2"
				         Grid.Row="1">

					<Ellipse.Fill>

						<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">

							<GradientStop Color="Blue" Offset="0.25" />

							<GradientStop Color="Black" Offset="1.0" />
						</LinearGradientBrush>
					</Ellipse.Fill>

				</Ellipse>


				<TextBlock x:Name="BigX"
				           Visibility="Collapsed"
				           FontSize="300"
				           FontWeight="ExtraBold"
				           Foreground="Red"
				           TextAlignment="Center"
				           Grid.ColumnSpan="4" Grid.RowSpan="2">
					X
				</TextBlock>


				<!-- Draws an oval with a blue interior and a black outline. -->


			</Grid>
