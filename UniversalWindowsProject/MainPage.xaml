<Page
	x:Class="UniversalWindowsProject.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:UniversalWindowsProject"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel>
			<TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Text="sXamlon" FontSize="50" />
			<Button Content="Start Game" x:Name="StartButton" Click="StartButton_OnClick" />
			<TextBlock x:Name="TextBlock"></TextBlock>
		</StackPanel>
		

		<Canvas Height="600" Width="600">

			<!-- Draws an oval with a blue interior. -->
			<Ellipse x:Name="Red"
						Tag="R"
			         Tapped="Red_click"
			         Width="200"
			         Height="200"
			   
			         Canvas.Left="100"
			         Canvas.Top="80" >

				<Ellipse.Fill>

					<LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
			
						<GradientStop Color="Red" Offset="0.25" />
					
						<GradientStop Color="Black" Offset="1.0" />
					</LinearGradientBrush>
				</Ellipse.Fill>

			</Ellipse>

			<Ellipse x:Name="Green"
			         Tag="G"
			         Tapped="Green_click"
			         Width="200"
			         Height="200"
			         Fill="Green"
			         Canvas.Left="310"
			         Canvas.Top="80" />

			<Ellipse x:Name="Yellow"
			         Tag="Y"
			         Tapped="Yellow_click"
			         Width="200"
			         Height="200"
			         Fill="Yellow"
			         Canvas.Left="100"
			         Canvas.Top="315" />

			<Ellipse x:Name="Blue"
			         Tag="B"
			         Width="200"
			         Tapped="Blue_click"
			         Height="200"
			         Fill="Blue"
			         Canvas.Left="310"
			         Canvas.Top="315" />


			<!-- Draws an oval with a blue interior and a black outline. -->


		</Canvas>

	</Grid>
</Page>